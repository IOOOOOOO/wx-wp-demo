@import "/towxml/style/main.wxss"/*引入渲染库的样式*/

page{
	background-color:#F8F8F8;
	line-height: 1.5;
	font-size: 34rpx;
}

input{
	border-top:1px solid #CCC;
	border-bottom:1px solid #CCC;
	height:40px;
	padding:0 5px;
	background-color: #FFF;
	margin-top:5px;
}

textarea{
	margin-top:5px;
	width:100%;
	border-top:1px solid #CCC;
	border-bottom:1px solid #CCC;
	background-color: #FFF;
	padding:3px 5px;
	box-sizing: border-box;
}

.post-title{
	font-size:42rpx;
	font-weight: bold;
	margin-bottom:10px;
	color:#21759b;
}

.loading{
	width:32px;
	height:32px;
	margin:10px auto;

}

.btn{
	margin:10px;
	background-color: #21759b;
	color:#FFF;
}

/*towxml库样式*/
.h2w__main{
	margin:0;
	padding:0;
}
image{
	margin:0 auto;
}